{
    "manifest_version": 3,
    "name": "WhatsApp Message Extractor",
    "version": "1.0",
    "description": "Extract messages from a specified chat and forward them for processing.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://web.whatsapp.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "WhatsApp Extractor"
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}